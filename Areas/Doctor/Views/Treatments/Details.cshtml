@model DentalManagement.Models.DoctorTreatment
@{
    ViewData["Title"] = "Treatment Details";
    Layout = "_DoctorLayout";
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Doctor" asp-controller="Dashboard" asp-action="Index">Doctor Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">My Treatments</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.TreatmentType.Name</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">
            <i class="bi bi-clipboard2-pulse text-primary me-2"></i>
            Treatment Details
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Treatments
        </a>
    </div>

    <div class="row">
        <!-- Treatment Information Card -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Treatment Information</h5>
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.TreatmentType.ImageUrl))
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.TreatmentType.ImageUrl" class="img-fluid rounded shadow-sm" style="max-height: 300px;" alt="@Model.TreatmentType.Name" />
                        </div>
                    }
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h2 class="h3 mb-3 text-primary">@Model.TreatmentType.Name</h2>
                            <p class="text-muted mb-0">
                                @if (string.IsNullOrEmpty(Model.TreatmentType.Description))
                                {
                                    <span class="fst-italic">No description provided</span>
                                }
                                else
                                {
                                    @Model.TreatmentType.Description
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex flex-column h-100 justify-content-center">
                                <div class="d-flex align-items-center mb-3 bg-light rounded-3 p-3">
                                    <div class="bg-primary bg-gradient rounded-circle p-3 me-3 text-white">
                                        <i class="bi bi-cash-coin fs-4"></i>
                                    </div>
                                    <div>
                                        <div class="small text-muted">Price</div>
                                        <div class="fw-bold fs-4">RM @Model.TreatmentType.Price.ToString("F2")</div>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center bg-light rounded-3 p-3">
                                    <div class="bg-primary bg-gradient rounded-circle p-3 me-3 text-white">
                                        <i class="bi bi-clock fs-4"></i>
                                    </div>
                                    <div>
                                        <div class="small text-muted">Duration</div>
                                        <div class="fw-bold fs-4">@Model.TreatmentType.Duration minutes</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="small text-muted">Assignment Date</div>
                                <div>@Model.CreatedAt.ToString("MMM dd, yyyy")</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="small text-muted">Last Updated</div>
                                <div>
                                    @if (Model.UpdatedAt.HasValue)
                                    {
                                        @Model.UpdatedAt.Value.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="fst-italic">Never updated</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Treatment Procedures Card -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Treatment Guidelines</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="bg-primary bg-gradient rounded-circle p-3 d-inline-block mb-3 text-white">
                            <i class="bi bi-journal-medical fs-1"></i>
                        </div>
                        <h5>Treatment Procedures</h5>
                        <p class="text-muted">
                            This treatment may require specific procedures. Please follow clinic guidelines.
                        </p>
                    </div>
                    
                    <div class="alert alert-info d-flex">
                        <i class="bi bi-info-circle-fill fs-5 me-2"></i>
                        <div>
                            <strong>Important Notice</strong>
                            <p class="mb-0 small">
                                For detailed treatment protocols and special instructions, please refer to the clinic manual or consult with the administration team.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Assignment Info -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Assignment Info</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3 bg-light p-3 rounded-3">
                        <div class="bg-primary bg-gradient rounded-circle p-2 me-3 text-white">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <div>
                            <div class="small text-muted">Assigned Since</div>
                            <div class="fw-semibold">@Model.CreatedAt.ToString("MMMM dd, yyyy")</div>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center bg-light p-3 rounded-3">
                        <div class="bg-primary bg-gradient rounded-circle p-2 me-3 text-white">
                            <i class="bi bi-toggle-on"></i>
                        </div>
                        <div>
                            <div class="small text-muted">Status</div>
                            <div class="fw-semibold">
                                @if (Model.IsActive)
                                {
                                    <span class="text-success">Active</span>
                                }
                                else
                                {
                                    <span class="text-secondary">Inactive</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
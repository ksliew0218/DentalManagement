@model IEnumerable<DentalManagement.Models.DoctorTreatment>
@{
    ViewData["Title"] = "My Treatments";
    Layout = "_DoctorLayout";
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Doctor" asp-controller="Dashboard" asp-action="Index">Doctor Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">My Treatments</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">
            <i class="bi bi-clipboard2-pulse text-primary me-2"></i>
            My Treatments
        </h1>
        <a asp-area="Doctor" asp-controller="Dashboard" asp-action="Index" class="back-button">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
    
    <div class="card shadow">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-exclamation-circle text-muted" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">No Treatments Assigned</h3>
                    <p class="text-muted">You don't have any treatments assigned yet. Please contact the administrator.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 80px;">Image</th>
                                <th>Treatment</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Duration</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.TreatmentType.ImageUrl))
                                        {
                                            <img src="@item.TreatmentType.ImageUrl" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" alt="@item.TreatmentType.Name" />
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                <i class="bi bi-image text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <span class="fw-bold">@item.TreatmentType.Name</span>
                                    </td>
                                    <td>
                                        @if (string.IsNullOrEmpty(item.TreatmentType.Description))
                                        {
                                            <span class="text-muted fst-italic">No description</span>
                                        }
                                        else
                                        {
                                            @(item.TreatmentType.Description?.Length > 50 
                                                ? item.TreatmentType.Description.Substring(0, 50) + "..." 
                                                : item.TreatmentType.Description)
                                        }
                                    </td>
                                    <td>RM @item.TreatmentType.Price.ToString("F2")</td>
                                    <td>@item.TreatmentType.Duration min</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> View Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Treatment Information</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-start">
                        <div class="bg-light rounded-circle p-3 me-3">
                            <i class="bi bi-info-circle text-primary fs-4"></i>
                        </div>
                        <div>
                            <p class="mb-1">
                                Treatments are assigned to you by administrators. Each treatment has its own specifics such as duration, price, and procedures.
                            </p>
                            <p class="mb-0 text-muted">
                                If you need any modifications to your assigned treatments, please contact the clinic administrator.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
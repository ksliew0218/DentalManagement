@model DentalManagement.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-primary">
        <i class="bi bi-speedometer2 me-2"></i> Dashboard
    </h1>
    <a asp-area="" asp-controller="TreatmentType" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i> Create New Treatment
    </a>
</div>
<!-- Display Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <!-- Doctors Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card dashboard-card border-0 shadow-sm h-100 bg-gradient-primary text-white">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="card-title text-uppercase mb-1">DOCTORS</div>
                        <div class="count mb-0">@Model.DoctorCount</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-person-badge icon"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 py-3">
                <a asp-area="" asp-controller="Doctor" asp-action="Index" class="text-white stretched-link d-flex justify-content-between align-items-center">
                    <span>View Details</span>
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Patients Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card dashboard-card border-0 shadow-sm h-100 bg-gradient-success text-white">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="card-title text-uppercase mb-1">PATIENTS</div>
                        <div class="count mb-0">@Model.PatientCount</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-people icon"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 py-3">
                <a href="#" class="text-white stretched-link d-flex justify-content-between align-items-center">
                    <span>View Details</span>
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Treatments Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card dashboard-card border-0 shadow-sm h-100 bg-gradient-info text-white">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="card-title text-uppercase mb-1">TREATMENTS</div>
                        <div class="count mb-0">@Model.TreatmentTypeCount</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-clipboard2-pulse icon"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 py-3">
                <a asp-area="" asp-controller="TreatmentType" asp-action="Index" class="text-white stretched-link d-flex justify-content-between align-items-center">
                    <span>View Details</span>
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Appointments Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card dashboard-card border-0 shadow-sm h-100 bg-gradient-warning text-white">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="card-title text-uppercase mb-1">APPOINTMENTS</div>
                        <div class="count mb-0">@Model.AppointmentCount</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-calendar-check icon"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 py-3">
                <a href="#" class="text-white stretched-link d-flex justify-content-between align-items-center">
                    <span>View Details</span>
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card shadow-sm border-0 rounded-3 mb-4">
            <div class="card-header bg-light py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="bi bi-lightning-charge me-2"></i>Quick Actions
                </h6>
            </div>
            <div class="card-body py-4">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-area="" asp-controller="TreatmentType" asp-action="Create" class="btn btn-primary w-100 py-3 d-flex align-items-center justify-content-center">
                            <i class="bi bi-plus-circle me-2"></i> Add Treatment
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-area="" asp-controller="Doctor" asp-action="Create" class="btn btn-success w-100 py-3 d-flex align-items-center justify-content-center">
                            <i class="bi bi-person-plus me-2"></i> Add Doctor
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-area="" asp-controller="BookAppointment" asp-action="ChooseTreatment" class="btn btn-info w-100 py-3 text-white d-flex align-items-center justify-content-center">
                            <i class="bi bi-calendar-plus me-2"></i> New Appointment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-4">
        <div class="card shadow-sm border-0 rounded-3 mb-4">
            <div class="card-header bg-light py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="bi bi-info-circle me-2"></i>System Info
                </h6>
            </div>
            <div class="card-body py-3">
                <div class="list-group list-group-flush">
                    <div class="list-group-item px-0 d-flex justify-content-between align-items-center border-0 py-2">
                        <span class="text-muted">Application Version</span>
                        <span class="badge bg-light text-dark">v1.0.0</span>
                    </div>
                    <div class="list-group-item px-0 d-flex justify-content-between align-items-center border-0 py-2">
                        <span class="text-muted">Database Status</span>
                        <span class="badge bg-success">Connected</span>
                    </div>
                    <div class="list-group-item px-0 d-flex justify-content-between align-items-center border-0 py-2">
                        <span class="text-muted">Last Backup</span>
                        <span class="badge bg-light text-dark">@DateTime.Now.AddDays(-1).ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="list-group-item px-0 d-flex justify-content-between align-items-center border-0 py-2">
                        <span class="text-muted">Server Time</span>
                        <span class="badge bg-light text-dark">@DateTime.Now.ToString("HH:mm:ss")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .dashboard-card .icon {
            font-size: 2.8rem;
            opacity: 0.7;
        }
        
        .dashboard-card .count {
            font-size: 2.5rem;
            font-weight: 700;
        }
        
        .dashboard-card .card-title {
            font-size: 0.9rem;
            letter-spacing: 0.05rem;
        }
        
        .dashboard-card .card-footer {
            background-color: rgba(0, 0, 0, 0.1);
        }
        
        .btn {
            border-radius: 6px;
            font-weight: 500;
        }
        
        .card {
            border-radius: 8px;
        }
    </style>
} 
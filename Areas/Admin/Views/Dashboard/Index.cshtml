@model DentalManagement.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="dashboard-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1"><i class="bi bi-speedometer2 me-2"></i>Dashboard</h1>
        <p class="text-muted mb-0">System overview and quick actions</p>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show mb-4 fade-in" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Stat Cards Row -->
<div class="row mb-4">
    <!-- Doctors Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card h-100 border-0 shadow-sm rounded-3">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="text-uppercase fw-bold mb-0 text-secondary fs-6">DOCTORS</h5>
                        <h2 class="display-4 fw-bold text-primary mt-2 mb-0">@Model.DoctorCount</h2>
                    </div>
                    <div class="icon-circle bg-primary bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-person-badge fs-1 text-primary"></i>
                    </div>
                </div>
                <a asp-area="" asp-controller="Doctor" asp-action="Index" class="stretched-link mt-3 d-flex justify-content-between align-items-center text-decoration-none">
                    <span class="small text-primary">View Details</span>
                    <i class="bi bi-arrow-right text-primary"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Patients Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card h-100 border-0 shadow-sm rounded-3">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="text-uppercase fw-bold mb-0 text-secondary fs-6">PATIENTS</h5>
                        <h2 class="display-4 fw-bold text-success mt-2 mb-0">@Model.PatientCount</h2>
                    </div>
                    <div class="icon-circle bg-success bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-people fs-1 text-success"></i>
                    </div>
                </div>
                <a asp-area="" asp-controller="Admin" asp-action="Patients" class="stretched-link mt-3 d-flex justify-content-between align-items-center text-decoration-none">
                    <span class="small text-success">View Details</span>
                    <i class="bi bi-arrow-right text-success"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Treatments Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card h-100 border-0 shadow-sm rounded-3">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="text-uppercase fw-bold mb-0 text-secondary fs-6">TREATMENTS</h5>
                        <h2 class="display-4 fw-bold text-info mt-2 mb-0">@Model.TreatmentTypeCount</h2>
                    </div>
                    <div class="icon-circle bg-info bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-clipboard2-pulse fs-1 text-info"></i>
                    </div>
                </div>
                <a asp-area="" asp-controller="TreatmentType" asp-action="Index" class="stretched-link mt-3 d-flex justify-content-between align-items-center text-decoration-none">
                    <span class="small text-info">View Details</span>
                    <i class="bi bi-arrow-right text-info"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Appointments Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card h-100 border-0 shadow-sm rounded-3">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="text-uppercase fw-bold mb-0 text-secondary fs-6">APPOINTMENTS</h5>
                        <h2 class="display-4 fw-bold text-warning mt-2 mb-0">@Model.AppointmentCount</h2>
                    </div>
                    <div class="icon-circle bg-warning bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-check2-square fs-1 text-warning"></i>
                    </div>
                </div>
                <a asp-area="" asp-controller="Admin" asp-action="Appointments" class="stretched-link mt-3 d-flex justify-content-between align-items-center text-decoration-none">
                    <span class="small text-warning">View Details</span>
                    <i class="bi bi-arrow-right text-warning"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card border-0 shadow-sm rounded-3 h-100">
            <div class="card-header bg-white py-3 border-0">
                <div class="d-flex align-items-center">
                    <i class="bi bi-lightning-charge text-primary me-2 fs-5"></i>
                    <h5 class="mb-0 fw-bold">Quick Actions</h5>
                </div>
            </div>
            <div class="card-body p-4">
                <div class="row g-4">
                    <div class="col-md-4">
                        <a asp-area="" asp-controller="TreatmentType" asp-action="Create" class="card h-100 border-0 shadow-sm text-decoration-none">
                            <div class="card-body text-center p-4">
                                <div class="icon-circle bg-primary bg-opacity-10 mx-auto mb-3 p-3 rounded-circle">
                                    <i class="bi bi-plus-circle fs-2 text-primary"></i>
                                </div>
                                <h6 class="mb-0 text-primary">Add Treatment</h6>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-area="" asp-controller="Doctor" asp-action="Create" class="card h-100 border-0 shadow-sm text-decoration-none">
                            <div class="card-body text-center p-4">
                                <div class="icon-circle bg-success bg-opacity-10 mx-auto mb-3 p-3 rounded-circle">
                                    <i class="bi bi-person-plus fs-2 text-success"></i>
                                </div>
                                <h6 class="mb-0 text-success">Add Doctor</h6>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-area="Admin" asp-controller="TimeSlot" asp-action="Create" class="card h-100 border-0 shadow-sm text-decoration-none">
                            <div class="card-body text-center p-4">
                                <div class="icon-circle bg-info bg-opacity-10 mx-auto mb-3 p-3 rounded-circle">
                                    <i class="bi bi-calendar-plus fs-2 text-info"></i>
                                </div>
                                <h6 class="mb-0 text-info">Add Time Slots</h6>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-4">
        <div class="card border-0 shadow-sm rounded-3 h-100">
            <div class="card-header bg-white py-3 border-0">
                <div class="d-flex align-items-center">
                    <i class="bi bi-info-circle text-primary me-2 fs-5"></i>
                    <h5 class="mb-0 fw-bold">System Info</h5>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <div class="list-group-item px-4 d-flex justify-content-between align-items-center border-0 py-3">
                        <span class="text-secondary">Application Version</span>
                        <span class="badge rounded-pill bg-light text-dark">v1.0.0</span>
                    </div>
                    <div class="list-group-item px-4 d-flex justify-content-between align-items-center py-3">
                        <span class="text-secondary">Database Status</span>
                        <span class="status-badge status-badge-sm status-confirmed">Connected</span>
                    </div>
                    <div class="list-group-item px-4 d-flex justify-content-between align-items-center py-3">
                        <span class="text-secondary">Last Backup</span>
                        <span class="badge rounded-pill bg-light text-dark">@DateTime.Now.AddDays(-1).ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="list-group-item px-4 d-flex justify-content-between align-items-center py-3 border-bottom-0">
                        <span class="text-secondary">Server Time</span>
                        <span class="badge rounded-pill bg-light text-dark">@DateTime.Now.ToString("HH:mm:ss")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert-dismissible').alert('close');
        }, 5000);
    </script>
    
    <style>
        .icon-circle {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .display-4 {
            font-size: 2.5rem;
        }
    </style>
} 
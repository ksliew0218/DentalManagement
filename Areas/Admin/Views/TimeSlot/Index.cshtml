@model IEnumerable<DentalManagement.Models.TimeSlot>

@{
    ViewData["Title"] = "Manage Doctor Time Slots";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["WarningMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["WarningMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Doctor Time Slots</li>
        </ol>
    </nav>
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Doctor Time Slots</h1>
        <div>
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
            <a asp-action="Create" class="btn btn-primary me-2">
                <i class="bi bi-plus-circle"></i> Create New Slots
            </a>
            <a asp-action="ClearPast" class="btn btn-danger">
                <i class="bi bi-trash"></i> Clear Past Slots
            </a>
        </div>
    </div>
    
    <div class="card shadow">
        <div class="card-body">
            @{
                var today = DateTime.UtcNow.Date;
                var pastSlots = Model.Count(s => s.StartTime.Date < today);
            }
            @if (pastSlots > 0)
            {
                <div class="alert alert-warning mb-3">
                    <i class="bi bi-exclamation-circle"></i> 
                    <span>@pastSlots past slot(s) found. Consider clearing them.</span>
                </div>
            }
            
            <div class="table-responsive">
                <table class="table table-hover" id="timeSlotsTable">
                    <thead class="table-light">
                        <tr>
                            <th>Doctor</th>
                            <th>Date</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var slot in Model)
                        {
                            var rowClass = slot.StartTime.Date < today ? "text-muted bg-light" : "";
                            <tr class="@rowClass">
                                <td>@slot.Doctor.FirstName @slot.Doctor.LastName</td>
                                <td>@slot.StartTime.ToShortDateString()</td>
                                <td>@slot.StartTime.ToShortTimeString()</td>
                                <td>@slot.EndTime.ToShortTimeString()</td>
                                <td>
                                    @if (slot.IsBooked)
                                    {
                                        <span class="badge bg-danger">Booked</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    @if (slot.StartTime.Date < today)
                                    {
                                        <span class="badge bg-secondary">Past</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#timeSlotsTable').DataTable({
                "order": [[1, "asc"], [2, "asc"]] // Sort by date and then by start time
            });
            
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert-dismissible').alert('close');
            }, 5000);
        });
    </script>
} 
@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<style>
    .register-container {
        padding: 40px 20px;
    }
    
    .register-card {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        padding: 40px;
        margin-bottom: 30px;
    }
    
    .register-header {
        text-align: center;
        margin-bottom: 30px;
    }
    
    .register-header h1 {
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 10px;
        color: #0d47a1;
    }
    
    .register-subtitle {
        color: #757575;
        font-size: 16px;
        margin-bottom: 20px;
    }
    
    .section-header {
        background: #f5f9ff;
        padding: 15px;
        border-radius: 8px;
        margin: 25px 0 20px 0;
        border-left: 4px solid #1a73e8;
    }
    
    .section-header h3 {
        margin: 0;
        font-size: 18px;
        color: #0d47a1;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    .form-control {
        height: 45px;
        border-radius: 6px;
    }
    
    .input-group-text {
        background-color: #f8f9fa;
    }
    
    .btn-primary {
        background-color: #1a73e8;
        border-color: #1a73e8;
        padding: 12px 20px;
        font-weight: 500;
        margin-top: 20px;
    }
    
    .btn-primary:hover {
        background-color: #0d47a1;
        border-color: #0d47a1;
    }
    
    .password-toggle {
        cursor: pointer;
    }
    
    .required-field::after {
        content: " *";
        color: #dc3545;
    }
    
    @@media (max-width: 768px) {
        .register-card {
            padding: 25px;
        }
    }
</style>

<div class="register-container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="register-header">
                <h1>Create Your Account</h1>
                <p class="register-subtitle">Join our dental care community today</p>
            </div>
            
            <div class="register-card">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="section-header">
                        <h3><i class="bi bi-person-badge"></i> Account Information</h3>
                    </div>
                    
                    
                    <div class="form-group">
                        <label asp-for="Input.Email" class="required-field">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    
                    <div class="form-group">
                        <label asp-for="Input.Password" class="required-field">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Create a password" />
                            <button type="button" class="btn btn-outline-secondary password-toggle" tabindex="-1" data-target="Input_Password">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword" class="required-field">Confirm Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm your password" />
                            <button type="button" class="btn btn-outline-secondary password-toggle" tabindex="-1" data-target="Input_ConfirmPassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="section-header">
                        <h3><i class="bi bi-file-earmark-person"></i> Personal Information</h3>
                    </div>

                    <div class="row">
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Input.FirstName" class="required-field">First Name</label>
                                <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Input.LastName" class="required-field">Last Name</label>
                                <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Input.Gender" class="required-field">Gender</label>
                                <select asp-for="Input.Gender" class="form-control">
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Input.Gender" class="text-danger"></span>
                            </div>
                        </div>

                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Input.DateOfBirth" class="required-field">Date of Birth</label>
                                <input asp-for="Input.DateOfBirth" type="date" class="form-control" />
                                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    
                    <div class="form-group">
                        <label asp-for="Input.Address" class="required-field">Address</label>
                        <textarea asp-for="Input.Address" class="form-control" placeholder="Address" rows="2"></textarea>
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>

                    
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber" class="required-field">Phone Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                        </div>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="section-header">
                        <h3><i class="bi bi-hospital"></i> Emergency Contact</h3>
                    </div>

                    <div class="row">
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Input.EmergencyContactName" class="required-field">Emergency Contact Name</label>
                                <input asp-for="Input.EmergencyContactName" class="form-control" placeholder="Emergency Contact Name" />
                                <span asp-validation-for="Input.EmergencyContactName" class="text-danger"></span>
                            </div>
                        </div>

                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Input.EmergencyContactPhone" class="required-field">Emergency Contact Phone</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                                    <input asp-for="Input.EmergencyContactPhone" class="form-control" placeholder="Emergency Contact Phone" />
                                </div>
                                <span asp-validation-for="Input.EmergencyContactPhone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-person-plus me-2"></i> Create Account
                        </button>
                    </div>
                    
                    <div class="text-center mt-3">
                        <p>Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold">Sign in</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function() {
            $('.password-toggle').on('click', function() {
                var targetId = $(this).data('target');
                var passwordInput = $('#' + targetId);
                var icon = $(this).find('i');
                
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                }
            });
        });
    </script>
}
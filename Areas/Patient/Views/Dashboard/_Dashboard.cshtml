@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Patient/Views/Shared/_PatientLayout.cshtml";
}

<head>
    <!-- Link to your custom dashboard CSS -->
    <link href="~/css/dashboard.css" rel="stylesheet" asp-append-version="true">
</head>

<div class="row">
    <!-- Patient Info Card -->
    <div class="col-12">
        <div class="patient-info-card">
            <div class="welcome-section">
                <h2>Welcome back, <span class="patient-name">@User.Identity.Name</span></h2>
                <div class="patient-details">
                    <div class="info-item">
                        <i class="bi bi-gender-female"></i>
                        <span>Female</span>
                    </div>
                    <div class="info-item">
                        <i class="bi bi-calendar3"></i>
                        <span>24 years</span>
                    </div>
                    <div class="info-item">
                        <i class="bi bi-droplet-fill"></i>
                        <span>O+</span>
                    </div>
                </div>
            </div>
            <div class="visit-section">
                <div class="visit-item">
                    <i class="bi bi-clock-history"></i>
                    <div class="visit-info">
                        <span class="visit-label">Recent Visit</span>
                        <span class="visit-date">15 March 2024</span>
                    </div>
                </div>
                <div class="visit-item">
                    <i class="bi bi-calendar-check"></i>
                    <div class="visit-info">
                        <span class="visit-label">Upcoming Visit</span>
                        <span class="visit-date">*</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="col-12">
        <div class="stats-container">
            <div class="stats-card">
                <div class="stats-icon bg-info">
                    <i class="bi bi-people"></i>
                </div>
                <div class="stats-details">
                    <span class="stats-number">@ViewData["PatientCount"]</span>
                    <span class="stats-label">Patients</span>
                </div>
            </div>
            <div class="stats-card">
                <div class="stats-icon bg-success">
                    <i class="bi bi-clipboard2-pulse"></i>
                </div>
                <div class="stats-details">
                    <span class="stats-number">@ViewData["SurgeryCount"]</span>
                    <span class="stats-label">Surgeries</span>
                </div>
            </div>
            <div class="stats-card">
                <div class="stats-icon bg-warning">
                    <i class="bi bi-journal-check"></i>
                </div>
                <div class="stats-details">
                    <span class="stats-number">@ViewData["DischargeCount"]</span>
                    <span class="stats-label">Discharges</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Dashboard Content -->
    <div class="col-12">
        <h2 class="page-title">Dashboard</h2>
        <div class="dashboard-content">
            <p>Dashboard content.</p>
        </div>
    </div>
</div>

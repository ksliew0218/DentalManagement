@model DentalManagement.Models.TreatmentType

@{
    ViewData["Title"] = "Delete Treatment";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Confirm Deletion
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        Are you sure you want to delete this treatment? This action cannot be undone.
                    </div>
                    
                    <div class="p-4 bg-light rounded mb-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="text-center mb-4">
                                <img src="@Model.ImageUrl" class="img-fluid rounded" style="max-height: 200px;" alt="@Model.Name" />
                            </div>
                        }
                        
                        <h3 class="text-primary mb-3">@Model.Name</h3>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="small text-muted">Price</div>
                                <div class="fw-bold">$@Model.Price.ToString("F2")</div>
                            </div>
                            <div class="col-md-6">
                                <div class="small text-muted">Duration</div>
                                <div class="fw-bold">@Model.Duration minutes</div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <div class="small text-muted">Description</div>
                            <div>
                                @if (string.IsNullOrEmpty(Model.Description))
                                {
                                    <span class="fst-italic">No description provided</span>
                                }
                                else
                                {
                                    @Model.Description
                                }
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <div class="small text-muted">Status</div>
                            <div>
                                <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                        </div>
                        
                        <div>
                            <div class="small text-muted">Assigned Doctors</div>
                            <div>
                                <span class="badge bg-info">@Model.DoctorTreatments.Count doctors</span>
                            </div>
                        </div>
                    </div>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Treatment
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 
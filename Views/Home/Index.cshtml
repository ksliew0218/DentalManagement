@using DentalManagement.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Home Page";
    var currentUser = await UserManager.GetUserAsync(User);
    var isAdmin = currentUser?.Role == UserRole.Admin;
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    
    @if (User.Identity.IsAuthenticated && isAdmin)
    {
        <div class="mt-4">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-speedometer2 me-2"></i> Go to Admin Dashboard
            </a>
        </div>
        
        <div class="mt-3">
            <p class="text-muted">You can also access the Admin Dashboard by clicking the link in the navigation bar above.</p>
        </div>
    }
</div>

@{
    ViewData["Title"] = "Upload Document";
}

<div class="container-fluid mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Upload Document to S3 via AWS Lambda</h4>
        </div>
        <div class="card-body">
            <p class="lead">
                This form demonstrates the integration with AWS Lambda and S3 for serverless file storage.
            </p>
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }
            
            <form asp-action="Upload" asp-controller="AppointmentDocument" method="post" enctype="multipart/form-data">
                <input type="hidden" name="appointmentId" value="@ViewBag.AppointmentId" />
                
                <div class="form-group mb-3">
                    <label for="file" class="form-label">Select Document</label>
                    <input type="file" class="form-control" id="file" name="file" required>
                    <small class="text-muted">Supported file types: PDF, JPG, PNG, DOC, DOCX</small>
                </div>
                
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" asp-route-appointmentId="@ViewBag.AppointmentId" class="btn btn-secondary">Back to Documents</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-cloud-upload"></i> Upload to S3
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-muted">
            <small>Files are uploaded through an AWS Lambda function to Amazon S3 storage.</small>
        </div>
    </div>
</div> 
@model DentalManagement.Models.DoctorLeaveRequest
@{
    ViewData["Title"] = "Cancel Leave Request";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow border-0 rounded-lg">
                <div class="card-header bg-primary text-white">
                    <h5 class="m-0 font-weight-bold">Cancel Leave Request</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle me-3 fa-2x"></i>
                            <div>
                                <h5 class="mb-1">Are you sure you want to cancel this leave request?</h5>
                                <p class="mb-0 text-muted">This action cannot be undone. You will need to submit a new request if needed.</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card mb-4 bg-light">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-3 text-primary">Leave Details</h6>
                            
                            <div class="row mb-3">
                                <div class="col-md-5">
                                    <span class="text-muted">Leave Type</span>
                                </div>
                                <div class="col-md-7 fw-bold">
                                    @Model.LeaveType.Name
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-md-5">
                                    <span class="text-muted">Start Date</span>
                                </div>
                                <div class="col-md-7 fw-bold">
                                    @Model.StartDate.ToString("dddd, MMMM d, yyyy")
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-md-5">
                                    <span class="text-muted">End Date</span>
                                </div>
                                <div class="col-md-7 fw-bold">
                                    @Model.EndDate.ToString("dddd, MMMM d, yyyy")
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-5">
                                    <span class="text-muted">Total Days</span>
                                </div>
                                <div class="col-md-7 fw-bold">
                                    @Model.TotalDays day(s)
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <form asp-action="Cancel" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Leaves
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-times-circle me-2"></i>Confirm Cancel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 
</div> 
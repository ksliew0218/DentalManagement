@model DentalManagement.ViewModels.DoctorLeaveViewModel
@{
    ViewData["Title"] = "Leave Management";
}

<div class="container-fluid py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <a asp-area="Doctor" asp-controller="Dashboard" asp-action="Index" class="back-button me-3">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            <h2 class="h3 text-primary mb-0"><i class="bi bi-calendar-range me-2"></i>Leave Management</h2>
        </div>
        <a asp-action="Apply" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Apply for Leave
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-check me-2"></i>Leave Balances - @DateTime.Now.Year
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var balance in Model.LeaveBalances ?? Enumerable.Empty<DoctorLeaveBalance>())
                        {
                            <div class="col-md-6 mb-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">@balance.LeaveType.Name</h5>
                                        <div class="d-flex justify-content-between">
                                            <span>Total: @balance.TotalDays days</span>
                                            <span>Remaining: @balance.RemainingDays days</span>
                                        </div>
                                        @{
                                            decimal percentage = balance.TotalDays > 0 ? (balance.RemainingDays / balance.TotalDays) * 100 : 0;
                                        }
                                        <div class="progress mt-2">
                                            <div class="progress-bar @(percentage > 50 ? "bg-success" : percentage > 25 ? "bg-warning" : "bg-danger")" 
                                                 role="progressbar" 
                                                 style="width: @percentage%"
                                                 aria-valuenow="@percentage" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                @percentage.ToString("0")%
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-list-check me-2"></i>Leave Request History
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="nav nav-tabs mb-4" id="leaveTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending-content" type="button" role="tab" aria-controls="pending-content" aria-selected="true">
                                Pending
                                <span class="badge bg-warning rounded-pill ms-1">
                                    @(Model.LeaveRequests?.Count(r => r.Status == LeaveRequestStatus.Pending) ?? 0)
                                </span>
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved-content" type="button" role="tab" aria-controls="approved-content" aria-selected="false">
                                Approved
                                <span class="badge bg-success rounded-pill ms-1">
                                    @(Model.LeaveRequests?.Count(r => r.Status == LeaveRequestStatus.Approved) ?? 0)
                                </span>
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected-content" type="button" role="tab" aria-controls="rejected-content" aria-selected="false">
                                Rejected
                                <span class="badge bg-danger rounded-pill ms-1">
                                    @(Model.LeaveRequests?.Count(r => r.Status == LeaveRequestStatus.Rejected) ?? 0)
                                </span>
                            </button>
                        </li>
                    </ul>
                    
                    <div class="tab-content" id="leaveTabContent">
                        <div class="tab-pane fade show active" id="pending-content" role="tabpanel" aria-labelledby="pending-tab">
                            @if (Model.LeaveRequests?.Any(r => r.Status == LeaveRequestStatus.Pending) == true)
                            {
                                <div class="alert alert-info mb-3">
                                    <i class="bi bi-info-circle me-2"></i> Pending requests are awaiting admin approval. You will be notified when a decision is made.
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Leave Type</th>
                                                <th>Dates</th>
                                                <th>Duration</th>
                                                <th>Submitted On</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var request in Model.LeaveRequests?.Where(r => r.Status == LeaveRequestStatus.Pending)?.OrderByDescending(r => r.RequestDate) ?? Enumerable.Empty<DoctorLeaveRequest>())
                                            {
                                                <tr>
                                                    <td>@request.LeaveType.Name</td>
                                                    <td>
                                                        <div>@request.StartDate.ToString("MMM dd, yyyy")</div>
                                                        <small class="text-muted">to</small>
                                                        <div>@request.EndDate.ToString("MMM dd, yyyy")</div>
                                                    </td>
                                                    <td>@request.TotalDays days</td>
                                                    <td>@request.RequestDate.ToString("MMM dd, yyyy")</td>
                                                    <td>
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="bi bi-hourglass-split me-1"></i>Pending
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <a asp-action="Details" asp-route-id="@request.Id" class="btn btn-sm btn-outline-primary me-1">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                        <a asp-action="Cancel" asp-route-id="@request.Id" class="btn btn-sm btn-outline-danger">
                                                            <i class="bi bi-x-circle"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                                    <p class="mt-3 text-muted">No pending leave requests</p>
                                </div>
                            }
                        </div>
                        
                        <div class="tab-pane fade" id="approved-content" role="tabpanel" aria-labelledby="approved-tab">
                            @if (Model.LeaveRequests?.Any(r => r.Status == LeaveRequestStatus.Approved) == true)
                            {
                                <div class="alert alert-success mb-3">
                                    <i class="bi bi-check-circle me-2"></i> Approved requests have been confirmed. Please ensure you've made necessary arrangements for your absence.
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Leave Type</th>
                                                <th>Dates</th>
                                                <th>Duration</th>
                                                <th>Approved On</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var request in Model.LeaveRequests?.Where(r => r.Status == LeaveRequestStatus.Approved)?.OrderByDescending(r => r.RequestDate) ?? Enumerable.Empty<DoctorLeaveRequest>())
                                            {
                                                <tr>
                                                    <td>@request.LeaveType.Name</td>
                                                    <td>
                                                        <div>@request.StartDate.ToString("MMM dd, yyyy")</div>
                                                        <small class="text-muted">to</small>
                                                        <div>@request.EndDate.ToString("MMM dd, yyyy")</div>
                                                    </td>
                                                    <td>@request.TotalDays days</td>
                                                    <td>@(request.ApprovalDate?.ToString("MMM dd, yyyy") ?? "-")</td>
                                                    <td>
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle me-1"></i>Approved
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <a asp-action="Details" asp-route-id="@request.Id" class="btn btn-sm btn-outline-primary">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                                    <p class="mt-3 text-muted">No approved leave requests</p>
                                </div>
                            }
                        </div>
                        
                        <div class="tab-pane fade" id="rejected-content" role="tabpanel" aria-labelledby="rejected-tab">
                            @if (Model.LeaveRequests?.Any(r => r.Status == LeaveRequestStatus.Rejected) == true)
                            {
                                <div class="alert alert-danger mb-3">
                                    <i class="bi bi-x-circle me-2"></i> These requests were not approved. Please check the comments for reason or contact admin for more information.
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Leave Type</th>
                                                <th>Dates</th>
                                                <th>Duration</th>
                                                <th>Rejected On</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var request in Model.LeaveRequests?.Where(r => r.Status == LeaveRequestStatus.Rejected)?.OrderByDescending(r => r.RequestDate) ?? Enumerable.Empty<DoctorLeaveRequest>())
                                            {
                                                <tr>
                                                    <td>@request.LeaveType.Name</td>
                                                    <td>
                                                        <div>@request.StartDate.ToString("MMM dd, yyyy")</div>
                                                        <small class="text-muted">to</small>
                                                        <div>@request.EndDate.ToString("MMM dd, yyyy")</div>
                                                    </td>
                                                    <td>@request.TotalDays days</td>
                                                    <td>@(request.ApprovalDate?.ToString("MMM dd, yyyy") ?? "-")</td>
                                                    <td>
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-x-circle me-1"></i>Rejected
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <a asp-action="Details" asp-route-id="@request.Id" class="btn btn-sm btn-outline-primary">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                                    <p class="mt-3 text-muted">No rejected leave requests</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
} 
@model DentalManagement.Models.Appointment
@{
    var patients = ViewBag.Patients as List<DentalManagement.Models.Patient>;
    var timeSlots = ViewBag.TimeSlots as List<DentalManagement.Models.TimeSlot>;
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Book Appointment</h2>

    <form asp-action="Create" method="post" class="bg-light p-4 rounded shadow-sm">
        <input type="hidden" asp-for="TreatmentTypeId" />
        <input type="hidden" asp-for="DoctorId" />
        <input type="hidden" asp-for="TotalAmount" />
        <input type="hidden" asp-for="Duration" />

        <!-- Select Patient -->
        <div class="mb-4">
            <label asp-for="PatientId" class="form-label">Patient</label>
            <select asp-for="PatientId" class="form-select form-control-lg" required>
                <option value="">-- Select Patient --</option>
                @foreach (var p in patients)
                {
                    <option value="@p.Id">@p.FirstName @p.LastName</option>
                }
            </select>
        </div>

        <!-- Select TimeSlot -->
        <div class="mb-4">
            <label class="form-label">Select Time Slot</label>
            <select name="TimeSlotId" class="form-select form-control-lg" required>
                <option value="">-- Select Time Slot --</option>
                @foreach (var slot in timeSlots)
                {
                    <option value="@slot.Id">
                        @slot.StartTime.ToString("yyyy-MM-dd hh:mm tt") - @slot.EndTime.ToString("hh:mm tt")
                    </option>
                }
            </select>
        </div>

        <!-- Notes -->
        <div class="mb-4">
            <label asp-for="Notes" class="form-label">Notes (optional)</label>
            <textarea asp-for="Notes" class="form-control form-control-lg" rows="4"></textarea>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-success w-100">Book Appointment</button>
        </div>
    </form>
</div>

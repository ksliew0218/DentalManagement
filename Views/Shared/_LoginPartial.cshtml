@using Microsoft.AspNetCore.Identity
@using DentalManagement.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var currentUser = await UserManager.GetUserAsync(User);
    var isAdmin = currentUser?.Role == UserRole.Admin;
    var isDoctor = currentUser?.Role == UserRole.Doctor;
    var isPatient = currentUser?.Role == UserRole.Patient;
}

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        @if (isDoctor)
        {
            <a id="manage" class="nav-link text-white" asp-area="Doctor" asp-controller="Profile" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        }
        else if (isPatient)
        {
            <a id="manage" class="nav-link text-white" asp-area="Patient" asp-controller="Profile" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        }
        else if (isAdmin)
        {
            <a id="manage" class="nav-link text-white" asp-area="Admin" asp-controller="Profile" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        }
        else
        {
            <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        }
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-white border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
